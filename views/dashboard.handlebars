<div class="mb-5 pt-3">
    <a href="/dashboard/create/">
        <button id="create-post" class="button is-info is-pulled-right has-text-black">
            Create Post
        </button>
    </a>

    <h4 class="is-size-4 has-text-weight-semibold pb-4">
        Posts You've Created
    </h4>
    <hr>
    {{#if posts.length}}
</div>

{{#each posts as |post|}}
{{> post-info post}}

<a href="/dashboard/edit/{{post.id}}">
    <button class="button mb-5 ml-5 is-warning">
        Edit Post
    </button>
</a>
</div>
{{/each}}

{{else}}
<h6 class="pb-4 has-text-centered">
    No posts have been created
</h6>

{{/if}}